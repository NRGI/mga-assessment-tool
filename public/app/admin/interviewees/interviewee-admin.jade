//- interviewee page
.container.top-padding-med
   .well.left-padding-lg.right-padding-lg
      legend.h3 Interviewee Admin Dashboard
      .pull-right
         form.form-inline
            .form-group
               input.form-control(ng-model="searchText", placeholder="Filter")
            .form-group.margin-left-med
               select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")
      table.table
         thead
            tr
               th.col-md-1 First name
               th.col-md-1 Last name
               th.col-md-1
               th.col-md-2 Phone number
               th.col-md-2 Role
               th.col-md-1 Assessments
               th.col-md-1
         tbody
            tr(ng-repeat="i in interviewees | filter:searchText | orderBy:sortOrder")
               td.col-md-1 {{i.firstName}}
               td.col-md-1 {{i.lastName}}
               td.col-md-1
                  a(href="mailto:i.lastName").btn.btn-default Email
               td.col-md-2 {{i.phone}}
               td.col-md-2 {{i.role}}
               td.col-md-1
                  .row(ng-repeat="assessment in i.assessments")
                     a(href="/admin/assessments-admin/{{assessment}}") {{assessment}}
               td.col-md-1
                  a(href="/admin/interviewees-admin/{{i._id}}").btn.btn-warning Edit
div.top-padding-med
   .well
      legend Assign assessment
      .row.left-padding-lg
         .form-horizontal
            form.form-horizontal(name="assignAssessment")
               fieldset
                  .row
                     label.col-md-4  User
                     .form-group.col-md-7
                        select.form-group.form-control.right-padding-med(name="user" ng-model="new_assignment" required)
                           option(value="" selected disabled) Select user assignment
                           option(ng-repeat="user in users" value="{{user._id}}") {{user.firstName}} {{user.lastName}} - {{user.role}}
                  .row.right-padding-lg.pull-right
                     button.btn.btn-success(ng-click="assessmentAssign()" ng-disabled="assignAssessment.$invalid") Deploy new assessment
                     | &nbsp;
                     button.btn.btn-danger(ng-click="closeDialog()") Cancel
                    div(id="new_comment_div").bottom-padding-med
                        ng-form(name="new_comment_form")
                            .form-group.top-padding-med
                                .row.left-padding-lg
                                    .col-md-10
                                        textarea.form-control(
                                        name="comment"
                                        type="text"
                                        ng-model="answer.new_comment"
                                        placeholder="New comment..."
                                        autocomplete="off"
                                        required)
                                    .col-md-1

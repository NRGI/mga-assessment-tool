.container-fluid.page-container
    .well
        div.page-well
            img.mapsicon.left-padding-lg(src="assets/mapsicon/all/{{assessment.assessment_ID | lowercase | limitTo: 2}}/vector.svg")
            legend.h3.page-header {{assessment.country}} {{assessment.year}} {{assessment.version | ucfirst}} {{mode}} questions
            .pull-right
                form.form-inline
                    .form-group
                        input.form-control(
                        ng-model="search_text"
                        placeholder="Filter")
                    .form-group.margin-left-med
                        select.form-control(
                        ng-model="sort_order"
                        ng-options="item.value as item.text for item in sort_options")

            .pull-left.left-padding-lg.bottom-padding-lg
                .row
                    text Users:
                .row(ng-repeat="user in user_list").left-padding-lg
                    text(ng-if="assessment.users.length===0") No users
                    a(href="mailto:{{user.email}}" ng-if="assessment.users.length!==0")  {{user.firstName}}  {{user.lastName}}
                    text  - {{user.role}}
                .row
                    text Status: {{assessment.status| addSpaces | ucfirst}}
                .row
                    text Last edit by
                    a(href="mailto:{{edited_by.email}}")  {{edited_by.firstName}}  {{edited_by.lastName}}
                    text  on
                    span(ng-repeat="mod in assessment.modified")
                        em(ng-show="$last")  {{mod.modified_date | date}}
                //.row Questions flagged: {{assessment.questions_flagged}}
                //.row Questions complete: {{assessment.questions_complete}}
                //.row Desk research questions: {{assessment.desk_research_set_length}}
                //.row Interview questions: {{assessment.interview_set_length}}
                .row.top-padding-med
                    a.btn.center-block.btn-primary.pull-left.col-md-9(
                    href="/assessments/{{assessment.assessment_ID}}"
                    ng-if="mode!=='assessment'") Go to main page
                .row.top-padding-med
                    a.btn.center-block.btn-primary.pull-left.col-md-9(
                    href="/assessments/desk_research/{{assessment.assessment_ID}}"
                    ng-if="mode!=='desk research'") Go to desk research
                .row.top-padding-med
                    a.btn.center-block.btn-primary.pull-left.col-md-9(
                    href="/assessments/interview/{{assessment.assessment_ID}}"
                    ng-if="mode!=='interview'") Go to interviews
                .row.top-padding-med
                    a.btn.center-block.btn-primary.pull-left.col-md-9(href="/assessments/secondary_sources/{{assessment.assessment_ID}}") Secondary sources
                .row.top-padding-med
                    button.btn.center-block.btn-default.pull-left.col-md-9(
                    ng-csv="getArray"
                    lazy-load="true"
                    download="answers.csv") Export

            nrgi-assessment-detail-table
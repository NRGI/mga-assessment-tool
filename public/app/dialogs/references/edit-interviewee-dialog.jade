div.left-padding-lg.right-padding-lg
    div.modal-header
        h3 Edit Interviewee
    div.modal-body
        .row(id="interviewee_form")
            .form-horizontal
                //INTERVIWEE EDIT
                fieldset
                    div.row.form-group
                        // salutation
                        .pull-left.col-lg-4
                            label
                                small Salutation:
                            select.form-group.form-control(ng-model="new_interviewee_data.salutation" ng-options="sal as (sal | ucfirst) for sal in salutations")
                        // FIRST NAME
                        .pull-left.col-lg-4
                            label
                                small First name:
                            input.form-control(
                            name="first_name"
                            type="text"
                            placeholder="First name..."
                            ng-model="new_interviewee_data.firstName"
                            autocomplete="off")
                        // LAST NAME
                        .pull-left.col-lg-4
                            label
                                small Last name:
                            input.form-control(
                            name="last_name"
                            type="text"
                            placeholder="Last name..."
                            ng-model="new_interviewee_data.lastName"
                            autocomplete="off")
                    div.row.form-group
                        // ROLE
                        .pull-left.col-lg-4
                            label
                                small Role:
                            select.form-group.form-control(ng-model="new_interviewee_data.role" ng-options="role as (role | ucfirst) for role in roles")
                        // TITLE
                        .pull-left.col-lg-4
                            label
                                small Title:
                            input.form-control(
                            name="title"
                            type="text"
                            placeholder="Title..."
                            ng-model="new_interviewee_data.title"
                            autocomplete="off")
                        // ORG
                        .pull-left.col-lg-4
                            label
                                small Organization:
                            input.form-control(
                            name="organization"
                            type="text"
                            placeholder="Organization..."
                            ng-model="new_interviewee_data.organization"
                            autocomplete="off")

                    div.row.form-group
                        // PHONE NUMBER
                        .pull-left.col-lg-4
                            label
                                small Phone number:
                            input.form-control(
                            name="phone"
                            type="text"
                            placeholder="Phone number..."
                            ng-model="new_interviewee_data.phone"
                            autocomplete="off")
                        // EMAIL
                        .pull-left.col-lg-4
                            label
                                small Email:
                            input.form-control(
                            name="email"
                            type="text"
                            placeholder="Email..."
                            ng-model="new_interviewee_data.email"
                            autocomplete="off")
                        // EMAIL
                        .pull-left.col-lg-4
                            label
                                small Mailing address:
                            input.form-control(
                            name="mailing_address"
                            type="text"
                            placeholder="Mailing Address..."
                            ng-model="new_interviewee_data.mailing_address"
                            autocomplete="off")

                    div.row.form-group
                        // ALT PHONE NUMBER
                        .pull-left.col-lg-4
                            label
                                small Alternate phone number:
                            input.form-control(
                            name="alt_phone"
                            type="text"
                            placeholder="Phone number..."
                            ng-model="new_interviewee_data.alt_phone"
                            autocomplete="off")
                        // ALT EMAIL
                        .pull-left.col-lg-4
                            label
                                small Alternate email:
                            input.form-control(
                            name="email"
                            type="text"
                            placeholder="Email..."
                            ng-model="new_interviewee_data.alt_email"
                            autocomplete="off")
                        // EMAIL
                        .pull-left.col-lg-4
                            label
                                small Allow attribution:
                            input.form-control(
                            name="mailing_address"
                            type="checkbox"
                            ng-model="new_interviewee_data.attribution")


    div.modal-footer
        .col-lg-6
            button.btn.btn-block.btn-success(
            ng-click="intervieweeSave(new_interviewee_data)") Save interviewee
        .col-lg-6
            button.btn.btn-block.btn-danger(ng-click="closeDialog()") Cancel
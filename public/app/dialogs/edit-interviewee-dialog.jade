div.top-padding-med
    .well
        legend Edit Interviewee
        .row.left-padding-lg(id="new_interviewee_form")
            .form-horizontal
                fieldset
                    .row
                        .form-group
                            .pull-left.col-lg-5
                                input.form-control(
                                type="text"
                                placeholder="First name (required)..."
                                ng-model="new_interviewee_data.firstName"
                                required)
                            .pull-left.col-lg-6
                                input.form-control(
                                type="text"
                                placeholder="Last name (required)..."
                                ng-model="new_interviewee_data.lastName"
                                required)
                    .row
                        .form-group
                            .pull-left.col-lg-5
                                input.form-control(
                                type="text"
                                placeholder="Phone number..."
                                ng-model="new_interviewee_data.phone"
                                required)
                            .pull-left.col-lg-6
                                input.form-control(
                                type="text"
                                placeholder="Email..."
                                ng-model="new_interviewee_data.email"
                                required)
                    .row.left-padding-med.right-padding-med
                        select.form-group.form-control(ng-model="new_interviewee_data.role" ng-options="role as (role | ucfirst) for role in roles")
                    .row
                        .col-md-pull-2
                            button.btn.btn-success(ng-click="intervieweeSave(new_interviewee_data)") Save interviewee
                            | &nbsp;
                            button.btn.btn-danger(ng-click="closeDialog()") Cancel
